 <mvc:View
        controllerName="testapp01.controller.Login"
        xmlns:mvc="sap.ui.core.mvc"
        xmlns="sap.m"
        >
        <App>
         <Page title="Login Form">				
				<content>
					<VBox fitContainer="true" justifyContent="Center" alignItems="Center" alignContent="Center">
						<items>
							<Input id="uid" placeholder="User ID"></Input>
							<Input id="pasw" placeholder="Password" type="Password"></Input>
							<Button width="12rem" text="Login" type="Emphasized" press="onLoginTap"></Button>
						</items>
					</VBox>
				</content>
				<footer >
					<Bar>
						<contentLeft>
                        <Image src="../utils/nix.png" width="50px" height="50px"></Image>
							<Text text="Nixon Dynamic Solutions"></Text>
						</contentLeft>
						<contentRight>
							<Text text="Login"></Text>
						</contentRight>
					</Bar>
				</footer>
			</Page>
            </App>
      </mvc:View> 